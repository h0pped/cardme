<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CardGenerator</title>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/index.css" />
  </head>
  <body>
    <div class="container">
      <div id="title-container">
        <div class="title-wrap">
          <h1 class="title">Introduce yourself</h1>
          <h2 class="subtitle">But in a quick way</h2>
        </div>
      </div>
      <div id="generate-card-container">
        <div id="card" class="hidden">
          <div class="card-block">
            <div class="card-block-content">
              <h3>Hello!</h3>
            </div>
          </div>
          <div class="card-block">
            <div class="card-block-content">
              <h3>My name is</h3>
              <input
                type="text"
                name="name"
                id="nameInput"
                placeholder="John Johnson"
                autocomplete="off"
              />
            </div>
          </div>
          <div class="card-block">
            <div class="card-block-content">
              <h3>I work as</h3>
              <input
                type="text"
                name="job"
                id="jobInput"
                placeholder="Software Engineer"
              />
            </div>
            <div class="card-block-content">
              <h3>In</h3>
              <input
                type="text"
                name="company"
                id="companyInput"
                placeholder="Company's name"
              />
            </div>
          </div>
          <div class="card-block">
            <div class="card-block-content">
              <span
                name="description"
                id="description"
                role="textarea"
                placeholder="Describe yourself"
                contenteditable="true"
              ></span>
            </div>
          </div>
          <div class="card-block block-stretch">
            <div class="card-block-content">
              <h3>Email:</h3>
              <input
                type="email"
                name="email"
                id="emailInput"
                placeholder="johnjohnson@gmail.com"
              />
            </div>
          </div>
          <div class="card-block">
            <div class="card-block-content">
              <h3>Phone:</h3>
              <input
                type="tel"
                name="number"
                id="numberInput"
                placeholder="+48 788 695 555"
              />
            </div>
          </div>
          <button
            type="submit"
            class="card-block block-stretch-full submit-btn"
          >
            Create a card!
          </button>
        </div>
      </div>
      <div id="ready-card-container" class="hidden">
        <h1>generated</h1>
      </div>
    </div>
    <script src="/js/script.js"></script>
  </body>
</html>